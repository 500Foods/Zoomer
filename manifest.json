{
  "manifest_version": 2,
  "name": "Zoomer",
  "version": "1.0.0",
  "description": "Per-URL zoom level manager for Firefox",
  
  "icons": {
    "48": "icons/zoomer-48.png",
    "96": "icons/zoomer-96.png",
    "512": "icons/zoomer-512.png"
  },
  
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "zoomer@500foods.com"
    }
  },

  "background": {
    "scripts": ["url-utils.js", "db-utils.js", "background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/zoomer-48.png",
      "32": "icons/zoomer-48.png"
    },
    "default_title": "Zoomer - Per-URL Zoom",
    "default_popup": "popup/popup.html"    
  },
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  } 
}